#include <iostream> 
 ​using namespace std; 
  
 ​void enter_arr(int* arr, int a){ 
 ​  for(int i = 0; i < a; i++) 
 ​    cin » arr[i]; 
 ​} 
  
 ​void sort_arr(int* arr, int a){ 
 ​  for(int i = 0; i < a; i++){ 
 ​    for(int i = 0; i < (a - 1); i++){ 
 ​      if(arr[i] > arr[i+1]){ 
 ​        int help = arr[i]; 
 ​        arr[i] = arr[i+1]; 
 ​        arr[i+1] = help; 
 ​      } 
 ​    }       
 ​  } 
 ​} 
  
 ​int main(){ 
 ​  cout << "Enter size: "; 
 ​  int size; 
 ​  cin >> size; 
 ​  int arr[size]; 
 ​  enter_arr(arr, size); 
 ​  sort_arr(arr, size); 
 ​}
